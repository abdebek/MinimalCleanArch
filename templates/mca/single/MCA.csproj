<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MinimalCleanArch" Version="1.0.0" />
    <PackageReference Include="MinimalCleanArch.DataAccess" Version="1.0.0" />
    <PackageReference Include="MinimalCleanArch.Extensions" Version="1.0.0" />
#if (UseSerilog)
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="5.0.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
#endif
#if (UseHealthChecks)
    <PackageReference Include="AspNetCore.HealthChecks.UI.Client" Version="8.0.1" />
#if (UseSqlite)
    <PackageReference Include="AspNetCore.HealthChecks.Sqlite" Version="8.0.1" />
#endif
#if (UseSqlServer)
    <PackageReference Include="AspNetCore.HealthChecks.SqlServer" Version="8.0.2" />
#endif
#if (UsePostgres)
    <PackageReference Include="AspNetCore.HealthChecks.Npgsql" Version="8.0.2" />
#endif
#endif
#if (UseValidation)
    <PackageReference Include="MinimalCleanArch.Validation" Version="1.0.0" />
#endif
#if (UseSecurity)
    <PackageReference Include="MinimalCleanArch.Security" Version="1.0.0" />
#endif
#if (UseCaching)
    <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="9.0.0" />
#endif
#if (UseMessaging)
    <PackageReference Include="MinimalCleanArch.Messaging" Version="1.0.0" />
#endif
#if (UseAudit)
    <PackageReference Include="MinimalCleanArch.Audit" Version="1.0.0" />
#endif
#if (UseOpenTelemetry)
    <PackageReference Include="OpenTelemetry.Exporter.Console" Version="1.9.0" />
    <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" Version="1.9.0" />
    <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.9.0" />
    <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.9.0" />
    <PackageReference Include="OpenTelemetry.Instrumentation.Http" Version="1.9.0" />
#endif
#if (UseSqlite)
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.0" />
#endif
#if (UseSqlServer)
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="9.0.0" />
#endif
#if (UsePostgres)
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="9.0.0" />
#endif
  </ItemGroup>

</Project>
