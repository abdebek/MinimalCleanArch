{
  "ConnectionStrings": {
#if (UseSqlite)
    "DefaultConnection": "Data Source=MCA.db"
#endif
#if (UseSqlServer)
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=MCA;Trusted_Connection=True;MultipleActiveResultSets=true"
#endif
#if (UsePostgres)
    "DefaultConnection": "Host=localhost;Database=MCA;Username=postgres;Password=postgres"
#endif
  },
#if (UseSerilog)
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
#endif
#if (UseSecurity)
  "Security": {
    "Encryption": {
      "Key": "REPLACE_WITH_SECURE_KEY_IN_PRODUCTION"
    },
    "Cors": {
      "AllowedOrigins": ["http://localhost:3000"]
    }
  },
#endif
#if (UseCaching)
  "Caching": {
    "DefaultExpiration": "00:05:00",
    "Redis": {
      "ConnectionString": "localhost:6379"
    }
  },
#endif
#if (UseAudit)
  "Audit": {
    "Enabled": true,
    "LogLevel": "Information"
  },
#endif
#if (UseOpenTelemetry)
  "OpenTelemetry": {
    "ServiceName": "MCA",
    "Exporter": "Console"
  },
#endif
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
