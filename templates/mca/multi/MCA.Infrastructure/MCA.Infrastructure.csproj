<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>__MCA_TFM__</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <NoWarn>$(NoWarn);NU1608</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MinimalCleanArch" Version="__MCA_VERSION__" />
    <PackageReference Include="MinimalCleanArch.DataAccess" Version="__MCA_VERSION__" />
    <!--#if (UseSecurity)-->
    <PackageReference Include="MinimalCleanArch.Security" Version="__MCA_VERSION__" />
    <!--#endif-->
    <!--#if (UseAudit)-->
    <PackageReference Include="MinimalCleanArch.Audit" Version="__MCA_VERSION__" />
    <!--#endif-->
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <!--#if (UseSqlite)-->
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.5" />
    <!--#endif-->
    <!--#if (UseSqlServer)-->
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="9.0.5" />
    <!--#endif-->
    <!--#if (UsePostgres)-->
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="9.0.2" />
    <!--#endif-->
    <!--#if (UseCaching)-->
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="9.0.5" />
    <!--#endif-->
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
    <!--#if (UseSqlite)-->
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="10.0.0" />
    <!--#endif-->
    <!--#if (UseSqlServer)-->
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="10.0.0" />
    <!--#endif-->
    <!--#if (UsePostgres)-->
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="10.0.0" />
    <!--#endif-->
    <!--#if (UseCaching)-->
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="10.0.0" />
    <!--#endif-->
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MCA.Domain\MCA.Domain.csproj" />
    <ProjectReference Include="..\MCA.Application\MCA.Application.csproj" />
  </ItemGroup>

</Project>
